<Mainscreen>
    
    BoxLayout: # background color
    # Change the background image depending onthe weadher.
    # Therefore, this setting will be unnecessary.
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 0.4157 ,0.6627 ,0.9451 ,1
            Rectangle:
                pos: self.pos
                size: self.size
        
